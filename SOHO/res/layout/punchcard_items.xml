<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bind_dialog_titlebg"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/intimetitle"
        android:textColor="@color/back"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/btnll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTitle"
        android:background="@drawable/bind_dialog_bodybg"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:id="@+id/itemtimell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intimetv"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/timeshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  2014-09-24 09:12"
                android:textColor="@color/back"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/putcardtype"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cardTypetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午"
                    android:textColor="@color/back"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cardTypeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/am" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnll3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/putInCardYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_on"
                android:text="签 到" />

            <Button
                android:id="@+id/putInCardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_on"
                android:text="不签了" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>