            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:id="@+id/approval_audit_btncancel"
         style="@style/style_button_bottom"
            android:text="取消"
           />
           <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
