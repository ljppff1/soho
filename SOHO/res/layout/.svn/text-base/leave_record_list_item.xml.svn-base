<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/usernamell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人:"
            android:textColor="@color/back" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leave_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="张珊"
                android:textColor="@color/back"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingRight="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/leave_record_modify_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/public_selector_bg"
                    android:text="修改" />

                <Button
                    android:id="@+id/leave_record_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/public_selector_bg"
                    android:text="删除" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/typell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamell"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类    型:"
            android:textColor="@color/back" />

        <TextView
            android:id="@+id/leave_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="事假"
            android:textColor="@color/back"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typell"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时    间:"
            android:textColor="@color/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leave_record_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2012-12-11 09:00"
                android:textColor="@color/back"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="至"
                android:textColor="@color/back"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/leave_record_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="2012-12-11 09:00"
                android:textColor="@color/back"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/longtimell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timell"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lefttotaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="费    时:"
            android:textColor="@color/back" />

        <TextView
            android:id="@+id/leave_record_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="16小时"
            android:textColor="@color/back"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/longtimell"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状    态:"
            android:textColor="@color/back" />

<!--         <TextView -->
<!--             android:id="@+id/pay_leave" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_marginLeft="20dp" -->
<!--             android:gravity="center" -->
<!--             android:text="未审批" -->
<!--             android:textColor="@color/back" -->
<!--             android:textSize="10sp" -->
<!--             android:visibility="invisible" /> -->

        <TextView
            android:id="@+id/leave_record_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="未审批"
            android:textColor="@color/back"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leavell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusll"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="事    由:"
            android:textColor="@color/back" />

        <TextView
            android:id="@+id/leave_record_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:lines="4"
            android:minLines="4"
            android:text="事由啥啥啥啥啥啥啥啥啥啥啥啥啥啥啥啥啥啥啥"
            android:textColor="@color/back"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>