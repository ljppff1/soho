<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c9fc1" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/localpostionmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/localpostion_top"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/localpostion_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/titlebar_bg_normal"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/public_selector_bg"
            android:text="返回" />

        <TextView
            style="@style/TextView.Middle.Black"
            android:id="@+id/title_localpostion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="地理位置"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/localpostion_bt_pc_records"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/public_selector_bg"
            android:text="提交位置" />
    </LinearLayout>



</RelativeLayout>