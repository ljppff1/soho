<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/itemsshowrll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:text="@string/inrTitleSuccess"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inrAddr"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rAddrShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="ddddddddddddddddddddddddddddddddddddd"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inrTime"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rTimeShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="9:07:57"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemsshowrll"
        android:gravity="center_horizontal"
        android:background="@color/gray" >

        <Button
            android:id="@+id/showResultBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_down"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="确定" />
    </LinearLayout>

</RelativeLayout>