<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listviewbg"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
     >
    
    <View
        android:id="@+id/flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="1" />
    
    
    <ImageView 
        android:id="@+id/iv_item_travel_approve_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:src="@drawable/mm_submenu" 
        />

    
    
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_item_travel_approve_right"
       
        android:layout_marginLeft="2dp"
        >
        
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:paddingLeft="6dp"
            
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王梅亭子"
            android:textSize="12sp"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_cb_item_travel_approve_names"
            android:paddingLeft="2dp"
            />
             <TextView 
            android:id="@+id/tv_cb_item_travel_approve_timelongs"
                        android:layout_toRightOf="@id/tv_cb_item_travel_approve_name"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出差时长："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:paddingLeft="20dp"
            
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_timelong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="12sp"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_cb_item_travel_approve_timelongs"
            android:paddingLeft="2dp"
            />
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_startdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出差起始时间："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_item_travel_approve_timelong"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-01 09：10"
            android:textSize="12sp"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_cb_item_travel_approve_startdates"
            android:layout_below="@id/tv_cb_item_travel_approve_timelong"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_reasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出差事由："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_item_travel_approve_startdate"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无 "
            android:paddingRight="2dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_cb_item_travel_approve_reasons"
            android:layout_below="@id/tv_cb_item_travel_approve_startdate"
			android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未通过 "
            android:textSize="13sp"
            android:textColor="@color/red"
            android:layout_below="@id/tv_cb_item_travel_approve_reason"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_item_travel_approve_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014/4/10 8:00"
            android:textSize="11sp"
            android:textColor="@color/blue_1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_cb_item_travel_approve_reason"
            android:paddingTop="1dp"
            />
        
      
        
        
    </RelativeLayout>
    
    

</RelativeLayout>
